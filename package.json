{
  "name": "earth-launcher",
  "version": "1.0.0",
  "description": "A modern desktop game launcher for Earth Library",
  "main": "dist/main-pi.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:pi": "concurrently \"npm run dev:renderer\" \"npm run dev:main:pi\"",
    "dev:main:pi": "tsc -p tsconfig.main.json && electron . --enable-logging --v=1",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:pi": "npm run build:renderer && tsc -p tsconfig.main.json",
    "dist": "electron-builder",
    "dist:pi": "npm run build:pi && electron-builder --linux AppImage --arm64",
    "start": "electron .",
    "start:pi": "electron . --enable-logging"
  },
  "keywords": [
    "game-launcher",
    "electron",
    "react",
    "typescript",
    "raspberry-pi"
  ],
  "author": "Earth Library",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "extract-zip": "^2.0.1",
    "lucide-react": "^0.294.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "simple-git": "^3.20.0",
    "tailwindcss": "^3.3.6"
  },
  "build": {
    "appId": "com.earthlibrary.launcher",
    "productName": "Earth-Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Game"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
